<local:MediaBrowserViewBase
    x:Class="MZikmund.Views.Admin.MediaBrowserView"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="using:MZikmund.DataContracts.Blobs"
    xmlns:local="using:MZikmund.Views.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MZikmund.ViewModels.Admin"
    xmlns:xaml="using:MZikmund.Extensions.Xaml"
    d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Padding="12,0" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="{xaml:Localize Key=Media}" />

        <Grid Grid.Row="1" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Command="{x:Bind ViewModel.UploadFileCommand}">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <SymbolIcon Symbol="Upload" />
                    <TextBlock Text="{xaml:Localize Key=Upload}" />
                </StackPanel>
            </Button>

            <TextBox
                Grid.Column="1"
                PlaceholderText="{xaml:Localize Key=Search}"
                Text="{x:Bind ViewModel.SearchFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <ComboBox
                Grid.Column="2"
                MinWidth="150"
                SelectedIndex="{x:Bind ViewModel.FilterMode, Mode=TwoWay, Converter={StaticResource EnumToIntConverter}}">
                <ComboBoxItem Content="{xaml:Localize Key=AllFiles}" />
                <ComboBoxItem Content="{xaml:Localize Key=Images}" />
                <ComboBoxItem Content="{xaml:Localize Key=Files}" />
            </ComboBox>
        </Grid>

        <ScrollViewer Grid.Row="2">
            <StackPanel>
                <ItemsControl ItemsSource="{x:Bind ViewModel.FilteredFiles, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="dto:StorageItemInfo">
                            <Grid
                                Width="200"
                                Height="200"
                                Margin="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Image Preview  -->
                                <Border
                                    Grid.Row="0"
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    CornerRadius="4,4,0,0">
                                    <Image
                                        Margin="8"
                                        Source="{x:Bind Url}"
                                        Stretch="Uniform" />
                                </Border>

                                <!--  File Name  -->
                                <TextBlock
                                    Grid.Row="1"
                                    Margin="8,4"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind FileName}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap"
                                    ToolTipService.ToolTip="{x:Bind FileName}" />

                                <!--  Actions  -->
                                <StackPanel
                                    Grid.Row="2"
                                    Margin="8,0,8,8"
                                    Orientation="Horizontal"
                                    Spacing="4">
                                    <Button
                                        Padding="8,4"
                                        Command="{Binding ElementName=Root, Path=ViewModel.DeleteFileCommand}"
                                        CommandParameter="{x:Bind}">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <SymbolIcon FontSize="12" Symbol="Delete" />
                                            <TextBlock FontSize="12" Text="{xaml:Localize Key=Delete}" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Padding="8,4"
                                        Click="CopyUrl_Click"
                                        Tag="{x:Bind Url}">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <SymbolIcon FontSize="12" Symbol="Copy" />
                                            <TextBlock FontSize="12" Text="{xaml:Localize Key=CopyUrl}" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Load More Button  -->
                <Button
                    Margin="8"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.LoadMoreCommand}"
                    IsEnabled="{x:Bind ViewModel.HasMoreItems, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.HasMoreItems, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Download" Visibility="{x:Bind ViewModel.IsLoadingMore, Mode=OneWay, Converter={StaticResource InverseNullToVisibilityConverter}}" />
                        <ProgressRing
                            Width="16"
                            Height="16"
                            IsActive="{x:Bind ViewModel.IsLoadingMore, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.IsLoadingMore, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <TextBlock Text="{xaml:Localize Key=LoadMore}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <!--  Empty State  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="8"
            Visibility="{x:Bind ViewModel.FilteredFiles.Length, Mode=OneWay, Converter={StaticResource EmptyCollectionToVisibilityConverter}}">
            <SymbolIcon
                FontSize="48"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Symbol="Document" />
            <TextBlock
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="{xaml:Localize Key=NoFilesFound}"
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</local:MediaBrowserViewBase>
