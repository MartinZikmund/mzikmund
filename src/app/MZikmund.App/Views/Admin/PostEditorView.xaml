<local:PostEditorViewBase
    x:Class="MZikmund.Views.Admin.PostEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MZikmund.Views.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid
        Padding="20"
        ColumnDefinitions="*, *"
        ColumnSpacing="8"
        RowDefinitions="Auto, Auto, *, Auto"
        RowSpacing="8">
        <TextBox
            Grid.ColumnSpan="1"
            FontSize="20"
            Header="Title"
            Text="{x:Bind ViewModel.PostTitle, Mode=TwoWay}" />
        <TextBox
            Grid.Column="1"
            Grid.ColumnSpan="1"
            FontSize="20"
            Header="Route"
            Text="{x:Bind ViewModel.PostRouteName, Mode=TwoWay}" />
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Vertical">
            <TextBlock Text="Categories" />
            <Button
                Margin="0,0,0,4"
                HorizontalAlignment="Stretch"
                Command="{x:Bind ViewModel.PickCategoriesCommand}"
                Content="{x:Bind ViewModel.CategoriesText, Mode=OneWay}" />
            <TextBlock Text="Tags" />
            <TextBox Text="{x:Bind ViewModel.Tags, Mode=TwoWay}" />
            <TextBlock Text="Hero image URL" />
            <Grid ColumnDefinitions="*, Auto">
                <TextBox Grid.Column="0" Text="{x:Bind ViewModel.Post.HeroImageUrl, Mode=TwoWay}" />
                <Button
                    Grid.Column="1"
                    Margin="4,0,0,0"
                    Command="{x:Bind ViewModel.BrowseImagesCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <SymbolIcon Symbol="Folder" />
                        <TextBlock Text="Browse" />
                    </StackPanel>
                </Button>
            </Grid>
            <TextBlock Text="Hero image ALT" />
            <TextBox Text="{x:Bind ViewModel.Post.HeroImageAlt, Mode=TwoWay}" />
        </StackPanel>
        <TextBox
            Grid.Row="1"
            AcceptsReturn="True"
            FontFamily="{StaticResource CodeFont}"
            Header="Abstract"
            Text="{x:Bind ViewModel.Post.Abstract, Mode=TwoWay}"
            TextWrapping="Wrap" />
        <Grid
            Grid.Row="2"
            RowDefinitions="Auto, *"
            RowSpacing="4">
            <Grid ColumnDefinitions="*, Auto, Auto">
                <TextBlock Text="Content" />
                <Button
                    Grid.Column="1"
                    Margin="4,0,0,0"
                    Command="{x:Bind ViewModel.InsertImageCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <SymbolIcon Symbol="Pictures" />
                        <TextBlock Text="Insert Image" />
                    </StackPanel>
                </Button>
                <Button
                    Grid.Column="2"
                    Margin="4,0,0,0"
                    Command="{x:Bind ViewModel.InsertFileCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <SymbolIcon Symbol="Attach" />
                        <TextBlock Text="Insert File" />
                    </StackPanel>
                </Button>
            </Grid>
            <TextBox
                x:Name="ContentTextBox"
                Grid.Row="1"
                AcceptsReturn="True"
                FontFamily="{StaticResource CodeFont}"
                Text="{x:Bind ViewModel.PostContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
        </Grid>

        <Grid
            Grid.Row="2"
            Grid.Column="1"
            RowSpacing="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Preview" />
            <ContentControl
                x:Name="PreviewWebViewContainer"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch" />
        </Grid>

        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Orientation="Horizontal"
            Spacing="8">
            <Button Command="{x:Bind ViewModel.SaveCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Save" />
                    <TextBlock Text="Save" />
                </StackPanel>
            </Button>
            <CheckBox
                Grid.Column="1"
                Content="Published"
                IsChecked="{x:Bind ViewModel.IsPublished, Mode=TwoWay}" />
            <DatePicker Date="{x:Bind ViewModel.PublishDate, Mode=TwoWay}" Header="Publish Date" />
            <TimePicker Header="Publish Time" Time="{x:Bind ViewModel.PublishTime, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</local:PostEditorViewBase>
