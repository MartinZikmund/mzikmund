@page
@model MZikmund.Web.Pages.Blog.IndexModel
@{
    <div class="blog-header text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-2">@Localizer["Blog"]</h1>
        <p class="lead text-muted">@Localizer["Thoughts, ideas, and tutorials on software development"]</p>
        <div class="mt-3">
            <a asp-page="/Blog/Category/Index" class="btn btn-outline-primary">Browse by Category</a>
        </div>
    </div>
    <div class="row">
        <partial name="_PostList" model="Model.BlogPosts" />
    </div>
}
