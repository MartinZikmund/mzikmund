@page
@model MZikmund.Web.Pages.Blog.IndexModel
@{
    <div class="blog-header text-center mb-3">
        <h1 class="display-4 text-primary">@Localizer["Blog"]</h1>
        <p class="lead text-muted">@Localizer["Thoughts, ideas, and tutorials on software development"]</p>
        <div class="mt-3 mb-3">
            <a asp-page="/Blog/CategoryList" class="btn btn-outline-primary">Browse by Category</a>
        </div>
        <div class="search-container">
            <form method="get" class="d-flex justify-content-center">
                <div class="input-group" style="max-width: 600px;">
                    <input type="text" 
                           class="form-control" 
                           name="searchTerm" 
                           value="@Model.SearchTerm" 
                           placeholder="@Localizer["Search posts..."]" 
                           aria-label="Search posts">
                    <button class="btn btn-primary" type="submit" aria-label="@Localizer["Search posts"]">
                        <i class="fas fa-search"></i> @Localizer["Search"]
                    </button>
                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                    {
                        <a href="/Blog" class="btn btn-outline-secondary">@Localizer["Clear"]</a>
                    }
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <partial name="_PostList" model="Model.BlogPosts" />
    </div>
}
