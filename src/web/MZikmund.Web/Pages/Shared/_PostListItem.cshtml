@model PostListItem
<div class="col-md-6 col-lg-4 p-3 p-md-3 d-flex align-items-stretch">
    <a asp-page="Post" asp-route-routename="@Model.RouteName" class="text-center w-100 card shadow-sm article-card">
        @*<img class="card-img-top" src="@Model.Localizations[0].HeroImage" alt="Card image">
*@
        <div class="card-body align-bottom">
            <h3 class="card-title text-primary">@Model.Title</h3>
            <h6 class="card-subtitle text-muted mb-2">@((Model.PublishedDate ?? Model.LastModifiedDate).Humanize())</h6>
            <p class="card-text text-body">
                @Model.Abstract
            </p>
        </div>
        <footer class="card-footer">
            <span class="btn btn-outline-none">@Localizer["Read more"]</span>
        </footer>
    </a>
</div>
