@using System.Runtime.InteropServices
@using MZikmund.Web.Core.Services
@inject IVersionInfoProvider VersionInfo
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <title>@MetaTags.HtmlTitle</title>

    <partial name="_HeadMetaPartial" />
    <partial name="_HeadLinksPartial" />

    <partial name="_HeadStylesPartial" />

    @Html.Raw(JavaScriptSnippet.FullScript)
    <partial name="_HeadScriptsPartial" />

    @await RenderSectionAsync(LayoutSections.Head, required: false)
</head>
<body>
    @{
        var currentPath = Context.Request.Path.Value?.TrimEnd('/') ?? "";
        bool isHome = currentPath == "" || currentPath == "/";
        bool isBlog = currentPath.StartsWith("/Blog", StringComparison.OrdinalIgnoreCase);
        bool isVideos = currentPath.StartsWith("/Videos", StringComparison.OrdinalIgnoreCase);
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/img/logo.png" width="48" alt="Martin Zikmund" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(isHome ? "active" : "")" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(isBlog ? "active" : "")" asp-page="/Blog/Index">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(isVideos ? "active" : "")" asp-page="/Videos">Videos</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="dropdown" id="theme-dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" title="@Localizer["Theme"]">
                                    <i class="bi bi-circle-half" id="theme-icon"></i>
                                    <span class="d-sm-none ms-1">@Localizer["Theme"]</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right slide-out">
                                    <a class="dropdown-item selected" data-value="auto" href="#"><i class="bi bi-circle-half me-2"></i>@Localizer["Auto"]</a>
                                    <a class="dropdown-item" data-value="light" href="#"><i class="bi bi-sun me-2"></i>@Localizer["Light"]</a>
                                    <a class="dropdown-item" data-value="dark" href="#"><i class="bi bi-moon-stars me-2"></i>@Localizer["Dark"]</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @await RenderSectionAsync(LayoutSections.AboveMain, false)
    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer mt-5">
        <div class="container">
            <div class="d-flex flex-wrap justify-content-between align-items-center py-4">
                <p class="col-md-4 mb-3 mb-md-0 text-muted">Â© @DateTimeOffset.UtcNow.Year Martin Zikmund</p>

                <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 text-decoration-none">
                    <img src="~/img/logo.png" style="opacity: 0.9" width="24" alt="Martin Zikmund" />
                </a>

                <ul class="nav col-md-4 justify-content-end">
                    <li class="nav-item"><a href="https://github.com/MartinZikmund/" class="nav-link px-2 text-muted" title="GitHub" target="_blank" rel="noopener"><i class="bi bi-github fs-5"></i></a></li>
                    <li class="nav-item"><a href="https://x.com/mzikmunddev/" class="nav-link px-2 text-muted" title="X" target="_blank" rel="noopener"><i class="bi bi-twitter-x fs-5"></i></a></li>
                    <li class="nav-item"><a href="https://www.youtube.com/@@mzikmund" class="nav-link px-2 text-muted" title="YouTube" target="_blank" rel="noopener"><i class="bi bi-youtube fs-5"></i></a></li>
                    <li class="nav-item"><a href="https://facebook.com/mzikmunddev/" class="nav-link px-2 text-muted" title="Facebook" target="_blank" rel="noopener"><i class="bi bi-facebook fs-5"></i></a></li>
                    <li class="nav-item"><a href="https://github.com/MartinZikmund/mzikmund" target="_blank" rel="noopener" class="nav-link px-2 text-muted" title="Contribute"><i class="bi bi-code-slash fs-5"></i></a></li>
                </ul>
            </div>

            <div class="text-center pb-3">
                <small class="text-muted" style="font-size: 0.75rem;">
                    Proudly running @RuntimeInformation.FrameworkDescription
                    @if (!string.IsNullOrEmpty(VersionInfo.CommitUrl))
                    {
                        var shortSha = VersionInfo.CommitSha?.Length >= 7 ? VersionInfo.CommitSha.Substring(0, 7) : VersionInfo.CommitSha;
                        <text> | </text><a href="@VersionInfo.CommitUrl" target="_blank" class="text-muted">@VersionInfo.Version+@shortSha</a>
                    }
                </small>
            </div>
        </div>
    </footer>
    <partial name="_CookieConsentPartial" />

    @await RenderSectionAsync(LayoutSections.BodyEnd, required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
