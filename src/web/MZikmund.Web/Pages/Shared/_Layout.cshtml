@using System.Runtime.InteropServices
@using MZikmund.Web.Core.Services
@inject IVersionInfoProvider VersionInfo
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <title>@MetaTags.HtmlTitle</title>

    <partial name="_HeadMetaPartial" />
    <partial name="_HeadLinksPartial" />

    <partial name="_HeadStylesPartial" />

    @Html.Raw(JavaScriptSnippet.FullScript)
    <partial name="_HeadScriptsPartial" />

    @await RenderSectionAsync(LayoutSections.Head, required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/img/logo.png" width="48" alt="Martin Zikmund" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Blog/Index">Blog</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="dropdown" id="theme-dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" title="@Localizer["Theme"]">@Localizer["Theme"]</a>
                                <div class="dropdown-menu dropdown-menu-right slide-out">
                                    <a class="dropdown-item selected" data-value="auto" href="#">@Localizer["Auto"]</a>
                                    <a class="dropdown-item" data-value="light" href="#">@Localizer["Light"]</a>
                                    <a class="dropdown-item" data-value="dark" href="#">@Localizer["Dark"]</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @await RenderSectionAsync(LayoutSections.AboveMain, false)
    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-5 mb-0 justify-content-start text-muted">Â© @DateTimeOffset.UtcNow.Year Martin Zikmund</p>

            <a href="/" class="col-2 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <img src="~/img/logo.png" style="opacity: 0.9" width="24" alt="Martin Zikmund" />
            </a>

            <ul class="nav col-5 justify-content-end">
                <li class="nav-item"><a href="https://github.com/MartinZikmund/" class="nav-link px-2 text-muted">GitHub</a></li>
                <li class="nav-item"><a href="https://x.com/mzikmunddev/" class="nav-link px-2 text-muted">Twitter</a></li>
                <li class="nav-item"><a href="https://www.youtube.com/@@mzikmund" class="nav-link px-2 text-muted">YouTube</a></li>
                <li class="nav-item"><a href="https://facebook.com/mzikmunddev/" class="nav-link px-2 text-muted">Facebook</a></li>
                <li class="nav-item"><a href="https://github.com/MartinZikmund/mzikmund" target="_blank" class="nav-link px-2 text-muted">Contribute</a></li>
            </ul>

            <p class="col-12 text-center text-muted">
                Proudly running @RuntimeInformation.FrameworkDescription
                @if (!string.IsNullOrEmpty(VersionInfo.CommitUrl))
                {
                    var shortSha = VersionInfo.CommitSha?.Length >= 7 ? VersionInfo.CommitSha.Substring(0, 7) : VersionInfo.CommitSha;
                    <text> | </text><a href="@VersionInfo.CommitUrl" target="_blank" class="text-muted">Version @VersionInfo.Version+@shortSha</a>
                }
            </p>
        </footer>
    </div>
    <partial name="_CookieConsentPartial" />

    @await RenderSectionAsync(LayoutSections.BodyEnd, required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
